<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Verifica" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>


    <style name="Theme.Verifica.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>


    <style name="Title">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/blackVerifica</item>
        <item name="android:fontFamily">@font/helvetica_bold</item>
        <item name="android:textSize">33sp</item>
        <item name="android:layout_marginTop">6dp</item>
        <item name="android:layout_marginBottom">12dp</item>
        <item name="android:ellipsize">end</item>
        <item name="android:singleLine">true</item>

    </style>

    <style name="TextLink">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/purple_200</item>
        <item name="android:fontFamily">@font/helvetica</item>

    </style>

    <style name="Basic">
        <item name="android:layout_width">wrap_content</item>
        <item name="lineHeight">20dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/blackVerifica</item>
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/helvetica</item>

    </style>

    <style name="BasicBold">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/blackVerifica</item>
        <item name="android:fontFamily">@font/helvetica_bold</item>
        <item name="android:textSize">16sp</item>

    </style>

    <style name="BasicLight">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/blackVerifica</item>
        <item name="android:fontFamily">@font/helvetica_light</item>

    </style>


    <style name="Button">
        <item name="android:background">@drawable/btn</item>
        <!--        <item name="android:textAllCaps">false</item>-->
        <item name="android:textColor">@android:color/white</item>
        <item name="android:fontFamily">@font/helvetica</item>
        <item name="android:textSize">16sp</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:layout_marginBottom">8dp</item>
        <item name="android:foreground">?android:attr/selectableItemBackground</item>

    </style>

    <style name="Input">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:background">@drawable/input</item>
        <!--<item name="android:backgroundTint" tools:targetApi="lollipop">@color/colorPrimary</item>-->
        <item name="android:textColor">@android:color/black</item>
        <item name="android:fontFamily">@font/helvetica</item>
        <item name="android:textSize">16sp</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:layout_marginBottom">15dp</item>
        <item name="android:paddingLeft">15dp</item>
        <item name="android:paddingRight">15dp</item>
        <item name="android:foreground">?attr/selectableItemBackgroundBorderless</item>

    </style>


    <style name="MultiLine">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:background">@drawable/multi_line</item>
        <!--<item name="android:backgroundTint" tools:targetApi="lollipop">@color/colorPrimary</item>-->
        <item name="android:textColor">@android:color/white</item>
        <item name="android:fontFamily">@font/helvetica</item>
        <item name="android:textSize">16sp</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:layout_marginBottom">15dp</item>
        <item name="android:paddingLeft">15dp</item>
        <item name="android:paddingRight">15dp</item>
        <item name="android:foreground">?android:attr/selectableItemBackground</item>

    </style>

    <style name="LinearMain">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:orientation">vertical</item>
        <item name="android:background">@android:color/white</item>
        <item name="android:padding">15dp</item>
    </style>

    <style name="Row">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="Icon">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">5dp</item>
    </style>

    <style name="CustomDialogTheme" parent="Theme.AppCompat.Light.Dialog.Alert">
        <!--buttons color-->
        <item name="colorAccent">@color/colorPrimary</item>
        <!--title and message color-->
        <item name="android:textColorPrimary">@android:color/black</item>
        <!--dialog background-->
        <item name="android:windowBackground">@drawable/background_dialog</item>
    </style>

    <style name="AppThemeNoTitleBar" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimaryDark">@color/blackVerifica</item>
    </style>


</resources>